<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <br>
          <h1>About</h1>
           <p>Επίθετο:<%= @user.surname %></p>

          <p>Gender:
          <% if @user.is_female? %>
            <%= "Γυναίκα" %>
          <% else %>
            <%= "Άνδρας" %>
          <% end %></p>

          <p>Ημ.Γέννησης:<%= @user.date_of_birth %></p>

          <p>Σχολείο:<%= @user.school %></p>
          <p>Πόλη:<%= @user.hometown %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>