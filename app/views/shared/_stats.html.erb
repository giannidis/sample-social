<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %><br>
      followers
      <% if @user && !@user.activated? && @user.followers.count > 2 %>
        <% @user.activate %>
      <% end %>
      <% if @user.activated? %><br>
        <h7>This account is activated<h7>
      <% end %>
    </strong>
  </a>
</div>