<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
      <% if @user && !@user.activated? && @user.followers.count > 2 %>
        <% @user.activate %>
      <% end %>
      <% if @user.activated? %>
        <h3>activated<h3>
      <% end %>
    </strong>
    followers
  </a>
</div>